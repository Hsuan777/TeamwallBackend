    "/users/sign-up": {
      "post": {
        "tags": [
          "Users"
        ],
        "summary": "註冊會員",
        "description": "暱稱限制 2~10 字元，密碼限制 8~20 字元",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "資料格式",
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "example": "Meme"
                },
                "email": {
                  "type": "string",
                  "example": "abc123@abc.ab"

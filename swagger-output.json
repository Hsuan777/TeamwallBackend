        "parameters": [
          {
            "name": "avatar",
            "in": "formData",
            "type": "file",
            "description": "上傳頭像"
          },
          {
            "name": "name",
            "in": "formData",
            "type": "string",
            "require": "true",
            "description": "暱稱(如果不夾帶圖片，只修改暱稱，可以用json傳)"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "example": "any"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "取得使用者資訊",
            "message": "更新成功"
          },
          "401": {
            "description": "回傳錯誤訊息",
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "boolean",
                  "example": false
                },
                "message": {
                  "type": "string",
                  "example": "錯誤訊息"

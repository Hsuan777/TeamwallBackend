        "parameters": [],
        "responses": {
          "200": {
            "description": "取得使用者資訊",
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "boolean",
                  "example": true
                },
                "data": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string",
                      "example": ""
                    },
                    "avatar": {
                      "type": "string",
                      "example": ""
                    }
                  }
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "401": {
            "description": "回傳錯誤訊息",
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "boolean",
                  "example": false
                },
                "message": {
                  "type": "string",
                  "example": "錯誤訊息"
                }
              },
              "xml": {
                "name": "main"

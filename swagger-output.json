    "/users/sign-in": {
      "post": {
        "tags": [
          "Users"
        ],
        "summary": "登入會員",
        "description": "密碼限制 8~20 字元",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "資料格式",
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "example": "abc123@abc.ab"
                },
                "password": {
                  "type": "string",
                  "example": "12345678"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "登入成功時，回傳 headers 中會帶有 token",
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "boolean",
                  "example": true
                },
                "message": {
                  "type": "string",
                  "example": "登入成功"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "401": {
            "description": "回傳錯誤訊息",
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "boolean",
                  "example": false
